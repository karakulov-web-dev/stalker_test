{% extends 'layout.twig' %}
{% import '/macro/iptw_macro2.twig' as main_macros %}
{% import '/macro/iptw_macro.twig' as main_macro %}
{% set title = ('Users'|trans ~ ': ' ~ 'list of users'|trans) | trans %}

{% block content %} 
    <div id="iptv_list">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                {% if attribute(app, 'filters_set') is defined %}
                    {% for filter in app.filters_set %}
                        {% if filter.values_set|length != 0 %}
                        {{ main_macro.get_filter(filter.text_id, filter.title, 'value', 'title', filter.values_set, 6, 8) }}
                        {% elseif filter.type == 'STRING' %}
                            {{ main_macro.get_filter_string_input(filter.text_id, filter.title, 'value', 'title', filter.values_set, 6, 8) }}
                        {% elseif filter.type == 'DATETIME' %}
                            {{ main_macro.get_filter_datetime_input(filter.text_id, filter.title, 'value', 'title', filter.values_set, 6, 8) }}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                <div class="col-sm-2 col-xs-2">
                {% if attribute(app, 'filters_template') is defined %}
                    {{ main_macros.get_dropdown_attribute(app['filters_template'], 'filter_param', 'Add parametr'|trans, 6, 1, 'true') }}
                {% endif %}
                </div>
                <a id="add_button" href="{{app.request.baseUrl}}/{{app.controller_alias}}/add-users" class="btn btn-success pull-right" {% if not app.resellerUserLimit %}style="display: none;"{% endif %}>{{ 'Add user'|trans }}</a>
                <span id="limit_message" class="btn btn-default pull-right" {% if app.resellerUserLimit %}style="display: none;"{% endif %}>{{ 'Limit of number of the users has been reached'|trans }}</span>
                <a id="form_filter_button" href="{{app.request.baseUrl}}/{{app.controller_alias}}/save-filter" class="btn btn-success green pull-right" data-filter_set_id="{% if attribute(app, 'filter_set') is defined %}{{ app.filter_set.id }}{% endif %}">{{ 'Save filter'|trans }}</a>
            </div>
        </div>

        <div class="row">
            <div class="box">
                {% if attribute(app, 'dropdownAttribute') is defined %}
                    {{ main_macro.get_dropdown_attribute(app['dropdownAttribute']) }}
                {% endif %}
                <div class="box-content">
                    <div class="box-content no-padding">
                        <div class="dataTables_processing"></div>
                        <table class="table  table-hover table-datatable" id="datatable-1">
                            {% if attribute(app, 'dropdownAttribute') is defined %}
                                {{ main_macro.get_datatable_head(app['dropdownAttribute']) }}
                            {% endif %}
                            <tbody>
                            {% if attribute(app, 'allUsers') is defined %}
                                <!-- Start: list_row -->
                                {% for item in app.allUsers %}
                                    <tr data-userid="{{ item.id }}">
                                        <td><a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-users?id={{ item.id }}" >{{ item.mac }}</a></td>
                                        <td>{{ item.ip }}</td>
                                        <td>{{ item.login }}</td>
                                        <td>{{ item.ls }}</td>
                                        <td>{{ item.fname }}</td>
                                        <td>{% if item.created > 0 %}{{ item.created|date('M d, Y H:i') }}{% else %}---{% endif %}</td>
                                        <td>
                                            {% if attribute(app.mediaTypeName, item.now_playing_type) is defined and not app.hide_media_info and item.status %}
                                                {{ app.mediaTypeName[item.now_playing_type] }}
                                            {% else %}
                                                --
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if app.hide_media_info and not item.status %}
                                            {% else %}
                                                {{ item.now_playing_content }}
                                            {% endif %}
                                        </td>
                                        <td>{% if item.last_change_status > 0 %}{{ item.last_change_status|date('M d, Y H:i') }}{% else %}{#00-00-0000#}{% endif %}</td>
                                        <td>{% if item.state %}
                                                <span class="">Online</span>
                                            {% else %}
                                                <span class="">Offline</span>
                                                <br><span>{{ 'Last activity'|trans }}: {% if item.last_active == 0 %}{{ item.last_active|date('M d, Y H:i') }}{% else %} - {% endif %}</span>
                                            {% endif %}</td>
                                        <td class="data-filter-status">{% if item.status == 0 %}<span class="">{{ 'on'|trans }}</span>{% else %}<span class="txt-danger">{{ 'off'|trans }}</span>{% endif %}</td>
                                        {% if attribute(app, 'reseller') is defined and not app['reseller'] %}
                                        <td>{{ item.reseller_name }}</td>
                                        {% endif %}
                                        {% if attribute(app, 'enableBilling') is defined and app.enableBilling %}
                                        <td>{% if item.expire_billing_date > 0 %}{{ item.expire_billing_date|date('M d, Y H:i') }}{% else %}{{ 'Unlimited'|trans }}{% endif %}</td>
                                        {% endif %}
                                        <td>
                                            <div class="col-xs-3 col-sm-8">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                    <i class="pull-right fa fa-cog"></i>
                                                </a>
                                                <ul class="dropdown-menu pull-right">
                                                    <li>
                                                        <a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-users?id={{ item.id }}">
                                                            <span>{{ 'Edit'|trans }}</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/users-consoles-logs?id={{ item.id }}">
                                                            <span>{{ 'Details'|trans }}</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/send-message" data-userid="{{ item.id }}">
                                                            <span>{{ 'Send message'|trans }}</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/toggle-user" data-userid="{{ item.id }}" data-userstatus="{{ item.status }}">
                                                            <span>{% if item.status == 0 %}{{ 'Turn off'|trans }}{% else %}{{ 'Turn on'|trans }}{% endif %}</span>
                                                        </a>
                                                    </li>
                                                    {% if attribute(app, 'reseller') is defined and not app['reseller'] %}
                                                    <li>
                                                        <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/move-user-to-reseller" data-id="{{ item.id }}" data-reseller_id="{{ item.reseller_id }}">
                                                            <span>{{ 'Change reseller for current user'|trans }}</span>
                                                        </a>
                                                    </li>
                                                    {% endif %}
                                                    {% if attribute(app, 'enableBilling') is defined and app.enableBilling %}
                                                        <li>
                                                            <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/set-expire-billing-date" data-userid="{{ item.id }}" data-setaction="set">
                                                                <span>{{ 'Set expires billing date'|trans }}</span>
                                                            </a>
                                                        </li>
                                                        {% if item.expire_billing_date > 0 %}
                                                        <li>
                                                            <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/set-expire-billing-date" data-userid="{{ item.id }}" data-setaction="unset">
                                                                <span>{{ 'Unset expires billing date'|trans }}</span>
                                                            </a>
                                                        </li>
                                                        {% endif %}
                                                    {% endif %}
                                                    <li>
                                                        <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/remove-user" data-userid="{{ item.id }}">
                                                            <span>{{ 'Delete'|trans }}</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            <!-- End: list_row -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

