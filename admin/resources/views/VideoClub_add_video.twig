        function DemoSelect2() {
            $.getScript("{{ app.request.baseUrl }}/plugins/select2/select2_locale_ru.js", function(){
                checkCatGenreList('#form_category_id', '#form_cat_genre_id');
                $('#form_category_id').select2({minimumResultsForSearch: -1});
