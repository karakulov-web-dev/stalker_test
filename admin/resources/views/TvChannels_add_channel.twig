                                        </label>
                                        <div class="bg-danger">
                                            {{ form_errors(app['form'].enable_tv_archive) }}
                                        </div>
                                    </div>
                                </div>
                                <div class=" col-xs-10 col-sm-3" id="wowza_dvr">
                                    <label class="col-sm-8 control-label">{{ 'Wowza DVR'|trans }}</label>
                                    <div class="checkbox">
                                        <label>
                                            {{ form_widget(app['form'].wowza_dvr) }}
                                            <i class="fa fa-square-o small"></i>
                                        </label>
                                        <div class="bg-danger">
                                            {{ form_errors(app['form'].wowza_dvr) }}
                                        </div>
                                    </div>
                                </div>
                                <div class=" col-xs-10 col-sm-3" id="flussonic_dvr">
