                                        <label>
                                            {{ form_widget(app['form'].flussonic_dvr) }}
                                            <i class="fa fa-square-o small"></i>
                                        </label>
                                        <div class="bg-danger">
                                            {{ form_errors(app['form'].flussonic_dvr) }}
                                        </div>
                                    </div>
