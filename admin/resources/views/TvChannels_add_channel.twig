                    var enable_monitoring = $("#modalbox_ad input[name*='enable_monitoring']:checked");
                    if ( this.checked && (enable_monitoring.length == 0 || enable_monitoring.val() == 'off') ){
                        showModalBox();
                    }
                });

            });
        }

